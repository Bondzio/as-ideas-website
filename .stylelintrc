{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "extends",
        "tailwind",
        "apply",
        "screen"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["px", "em", "rem", "%", "s", "ms"]
  }
}